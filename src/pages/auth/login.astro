---
import { config } from '../../config';
import Layout from '../../layouts/Layout.astro';
import LoginForm from '../../components/LoginForm.astro';

const registered = Astro.url.searchParams.get('registered') === 'true';
---

<Layout title="Login">
  <div class="min-h-screen flex bg-gradient-to-br from-indigo-100 via-white to-indigo-50">
    <!-- Left Side - Decorative -->
    <div class="hidden lg:flex lg:w-1/2 relative items-center justify-center bg-indigo-600">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <svg class="w-full h-full" width="100%" height="100%" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
          <g fill="#fff" fill-rule="evenodd">
            <path d="M0 40L40 0H20L0 20M40 40V20L20 40"/>
          </g>
        </svg>
      </div>
      
      <!-- Content -->
      <div class="relative z-10 p-12 text-white">
        <div class="mb-10">
          <h1 class="text-4xl font-bold mb-3">{config.app.name}</h1>
          <p class="text-indigo-200 text-lg">Welcome to your digital workspace</p>
        </div>
        <div class="space-y-6 text-indigo-100">
          <div class="flex items-center space-x-4">
            <div class="bg-indigo-500/50 p-3 rounded-lg">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold">Secure Access</h3>
              <p class="text-sm text-indigo-200">Protected with enterprise-grade security</p>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <div class="bg-indigo-500/50 p-3 rounded-lg">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold">Lightning Fast</h3>
              <p class="text-sm text-indigo-200">Optimized for maximum performance</p>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <div class="bg-indigo-500/50 p-3 rounded-lg">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold">Easy to Use</h3>
              <p class="text-sm text-indigo-200">Intuitive interface for all users</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side - Login Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 sm:p-12 lg:p-16">
      <div class="w-full max-w-md space-y-8">
        <!-- Mobile Logo - Only visible on smaller screens -->
        <div class="lg:hidden text-center mb-8">
          <h1 class="text-2xl font-bold text-indigo-600">{config.app.name}</h1>
          <p class="mt-2 text-sm text-gray-600">Welcome back! Please sign in to continue.</p>
        </div>

        <div class="bg-white py-8 px-4 shadow-2xl sm:rounded-lg sm:px-10">
          <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="text-center text-3xl font-extrabold text-gray-900">
              Sign in to your account
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
              Access your workspace securely
            </p>
          </div>

          <LoginForm showSuccessMessage={registered} />
        </div>

        <!-- Additional Info -->
        <div class="mt-6 text-center text-sm">
          <p class="text-gray-600">
            Need help? Contact support at
            <a href="mailto:support@example.com" class="font-medium text-indigo-600 hover:text-indigo-500">
              support@example.com
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>