---
import { config } from '../../config';
import Layout from '../../layouts/Layout.astro';
import RegisterForm from '../../components/RegisterForm.astro';
---

<Layout title="Register">
  <div class="min-h-screen flex bg-gradient-to-br from-indigo-100 via-white to-indigo-50">
    <!-- Left Side - Decorative -->
    <div class="hidden lg:flex lg:w-1/2 relative items-center justify-center bg-indigo-600">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <svg class="w-full h-full" width="100%" height="100%" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
          <g fill="#fff" fill-rule="evenodd">
            <path d="M0 40L40 0H20L0 20M40 40V20L20 40"/>
          </g>
        </svg>
      </div>
      
      <!-- Content -->
      <div class="relative z-10 p-12 text-white">
        <div class="mb-10">
          <h1 class="text-4xl font-bold mb-3">{config.app.name}</h1>
          <p class="text-indigo-200 text-lg">Create your account today</p>
        </div>
        <div class="space-y-6 text-indigo-100">
          <div class="flex items-center space-x-4">
            <div class="bg-indigo-500/50 p-3 rounded-lg">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold">Secure Platform</h3>
              <p class="text-sm text-indigo-200">Your data is always protected</p>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <div class="bg-indigo-500/50 p-3 rounded-lg">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold">Team Management</h3>
              <p class="text-sm text-indigo-200">Collaborate with your team</p>
            </div>
          </div>
          <div class="flex items-center space-x-4">
            <div class="bg-indigo-500/50 p-3 rounded-lg">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold">Instant Access</h3>
              <p class="text-sm text-indigo-200">Start using the platform immediately</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Side - Registration Form -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 sm:p-12 lg:p-16">
      <div class="w-full max-w-md space-y-8">
        <!-- Mobile Logo - Only visible on smaller screens -->
        <div class="lg:hidden text-center mb-8">
          <h1 class="text-2xl font-bold text-indigo-600">{config.app.name}</h1>
          <p class="mt-2 text-sm text-gray-600">Create your account to get started</p>
        </div>

        <div class="bg-white py-8 px-4 shadow-2xl sm:rounded-lg sm:px-10">
          <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="text-center text-3xl font-extrabold text-gray-900">
              Create your account
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
              Join our platform and get started today
            </p>
          </div>

          <RegisterForm />
        </div>

        <!-- Additional Info -->
        <div class="mt-6 text-center text-sm">
          <p class="text-gray-600">
            By registering, you agree to our
            <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">Terms of Service</a>
            and
            <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">Privacy Policy</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .bg-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
</style>